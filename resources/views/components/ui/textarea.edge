<div class="relative w-full">
  <label class="group">
    @let(val = value && old(`${name}`) ? old(`${name}`) : value)
    <textarea
      name="{{name || ''}}"
      type="{{type || 'text'}}"
      class="border min-h-[120px] transition-all w-full text-sm md:text-base text-input rounded-lg py-2.5 pl-4 pr-12 {{className ? className : ''}} hover:border-primary focus:border-primary focus-visible:outline-primary"
      placeholder="{{placeholder || ''}}"
      cols="30" rows="10"
      maxlength="1024"
    >{{val || ''}}</textarea>
    @if(icon)
      <svg class="size-6 transition-all absolute top-2.5 right-4 text-input group-hover:text-primary group-focus-within:text-primary">
        <use href="#{{icon}}"/>
      </svg>
    @end
  </label>

  @inputError(name)
    @each(message in $messages)
      <small class="text-red-500 font-medium">{{ message }}</small>
    @end
  @end
</div>
